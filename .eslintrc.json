{
  "env": {
    "browser": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["standard", "plugin:react/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "semi": "off",
    "react/react-in-jsx-scope": "off",
    "indent": ["error", 2],
    "space-before-function-paren": ["error", "never"]
  },
  "settings": {
    "react": {
      "version": "detect" // This is needed to fix the warning related to react version during linting
    }
  }
}
